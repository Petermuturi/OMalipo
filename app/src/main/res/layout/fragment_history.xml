<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ke.co.omalipo.omalipo.fragment_views.second_view_tabs.History">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_marginTop="50dp">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          app:srcCompat="@drawable/history"
          android:id="@+id/historypic"
          android:layout_gravity="center"
           />
      <TextView
          android:id="@+id/historyinfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/historypic"
          android:text="Nothing in your History!"
          android:textSize="20dp"
          android:layout_gravity="center"
          android:layout_marginTop="12dp"/>
      <TextView
          android:id="@+id/historyinfo2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/historypic"
          android:text="You could do better. Get going."
          android:layout_gravity="center"
          android:layout_marginTop="10dp"/>

      <Button

          android:textColor="#fff"
          android:background="@color/colorAccent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/browse"
          android:layout_gravity="center"
          android:text="Browse vouchers"
          android:paddingRight="72dp"
          android:paddingLeft="72dp"
          android:layout_marginTop="12dp"
          />
  </LinearLayout>

</FrameLayout>
