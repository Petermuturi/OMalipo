<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ke.co.omalipo.omalipo.classes.ProductInfoActivity">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/info_bar">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:elevation="0dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:text="10% Off on your Bill"
        android:id="@+id/textView"
        android:layout_marginLeft="-80dp"
        android:layout_gravity="center"
        android:layout_marginTop="-35dp"/>

</android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info_bar"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/timeIcon"
           android:src="@android:drawable/ic_menu_today" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/timeIcon"
            android:text="Valid till 31 Oct 2016"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</RelativeLayout>
